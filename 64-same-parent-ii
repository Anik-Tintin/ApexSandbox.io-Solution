public Boolean sameParent(Account acc, Contact con, Opportunity opp) {
    if(opp.AccountId!=null && con.AccountId!=null && acc.Id!=null){
        if(opp.AccountId == con.AccountId && opp.AccountId == acc.Id){
            return true;
        }
        else{
            return false;
        }
    }
    else{
        return false;
    }
}